{
    "scripts": {
        "start": "node --inspect=8080 -r ts-node/register ./src/server.ts",
        "start:watch": "nodemon",
        "build": "tsc"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    },
    "devDependencies": {
        "@types/node": "^14.14.16",
        "eslint": "^7.16.0",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "^2.0.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "express": "^4.17.1"
    }
}
